{
  "manifest_version": 3,
  "name": "Prism",
  "version": "1.0",
  "description": "Save and organize your highlights from any webpage. Select text to save it instantly.",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "action": { 
    "default_title": "Prism - Click to toggle overlay"
  },
  "background": { 
    "service_worker": "background.js" 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "overlay.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/chart.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

